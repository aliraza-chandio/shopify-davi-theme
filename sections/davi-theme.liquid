<footer class="footer">
  
  {% for block in section.blocks %}  
    {% case block.type %}
  
      {% when 'link' %}  
        <div class="link" {{ block.shopify_attributes }}>   
          {{ block.settings.linktext | link_to: block.settings.linkurl }}
        </div> 
  
      {% when 'custom-text' %}
        <div class="text" {{ block.shopify_attributes }}>{{ block.settings.custom-text-field }}</div>
  
    {% endcase %} 
  {% endfor %}

</footer>  

{% schema %}
{
    "name": "Davi Multistep Form 2",
	"class": "container mx-auto",
	"tag": "section",
  "max_blocks": 8,
	"settings": [{
		"id": "section_title",
        "type": "text",
        "label": "Section Header",
		"default": "Multistep Form"
	}],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "id": "linkurl",
          "type": "url",
          "label": "URL link"
        },
        {
          "id": "linktext",
          "type": "text",
          "label": "Link text"
        }
      ]
    },
    {
      "type": "custom-text",
      "name": "Custom Text",
      "settings": [
        {
          "id": "custom-text-field",
          "type": "textarea",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}